<% if @book.errors.any? %>
  <%= @book.errors.count %>件のエラーが発生しました
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<div class="container">
 <div class="row">
  <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
<h1>Editing Book</h1>

<%= form_with model: @book, method: :patch do |f| %>
  
  <div class="form-group">
    <%= f.label :Title %><br />
    <%= f.text_field :title, autofocus: true %>
  </div>
  
  <div class="form-group">
    <%= f.label :Opinion %><br />
    <%= f.text_area :body, autofocus: true %>
  </div>

  <div class="actions">
    <%= f.submit "Update Book",class: "btn btn-success" %>
  </div>
  <%= link_to "Show",book_path(@book.id) %>
  |
  <%= link_to "Edit",books_path %>
</div>
</div>
</div>
<% end %>